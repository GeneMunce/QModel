package QModel;

import java.util.ArrayList;
import java.util.Queue;
import java.util.Random;

import javafx.scene.control.TextField;

public class Create extends Station{
	/**
	 * 
	 */
	static int currentCreateId = 100;
	private static final long serialVersionUID = -4334563588867927474L;
	private int createId;
	private int createType;
	private int tokensToCreate;
	private int a;
	private int b;
	private int c;
	private Queue<Token> freeTokenList;
	private int releaseTime;
	Random rand;

	/*
	 * 	createType	function	a		b		c
	 * -----------------------|--------------------
	 * 	0			constant	rate	x		x
	 * 	1			normal		mean	std_dev	x
	 * 	2			triangular	min		max		most likely
	 */

	public Create(ArrayList<TextField> tfa, Queue<Token> freeTokenList) {
		super();
		String na = tfa.get(0).getCharacters().toString();
		int ty = Integer.parseInt(tfa.get(1).getCharacters().toString());
		int dr = Integer.parseInt(tfa.get(2).getCharacters().toString());
		int nt = Integer.parseInt(tfa.get(3).getCharacters().toString());
		int cy = Integer.parseInt(tfa.get(4).getCharacters().toString());

		this.rand = new Random();
		this.setStationName(na);
		this.createType = ty;
		this.tokensToCreate = nt;
		this.a = dr;
		this.b = 0;
		this.c = 0;
		this.freeTokenList = freeTokenList;
		this.createId = currentCreateId++;
		switch (createType) {
		case 0:
			releaseTime = a;
			System.out.println("Creating a Create Station " + stationName);
			break;
		case 1:
			releaseTime = a;
			break;
		case 2:
			releaseTime = TriangularD(a, b, c);
			break;
		default :
			releaseTime = 0;
			System.out.println("Wrong type sent to Create: " + createId);
		}
	}

	public Create(String stationName, int createType, int tokensToCreate, int a, int b, int c, Queue<Token> freeTokenList) {
		super();
		this.rand = new Random();
		this.setStationName(stationName);
		this.createType = createType;
		this.tokensToCreate = tokensToCreate;
		this.a = a;
		this.b = b;
		this.c = c;
		this.freeTokenList = freeTokenList;
		this.createId = currentCreateId++;
		switch (createType) {
		case 0:
			releaseTime = a;
			System.out.println("Creating a Create Station " + stationName);
			break;
		case 1:
			releaseTime = a;
			break;
		case 2:
			releaseTime = TriangularD(a, b, c);
			break;
		default :
			releaseTime = 0;
			System.out.println("Wrong type sent to Create: " + createId);
		}
	}

	public void tick() {
		
		if(releaseTime-- <= 1) {
			ReleaseTokens();
			
			switch (createType) {
				case 0:
						releaseTime = a;
					break;
				case 1:
					break;
				case 2:
						releaseTime = TriangularD(a, b, c);
					break;
				default :
					System.out.println("Wrong type sent to Create: " + createId);
			}
		}
		else {
			setIdleTime(getIdleTime() + 1);

		}
		
	}

	private void ReleaseTokens() {
		for(int i = tokensToCreate; i >= 1; i--) {
			this.add(freeTokenList.poll());
		}
		setWorkTime(getWorkTime() + 1);		
	}

	private int TriangularD(int a, int b, int c) {
		int r;
		int p = rand.nextInt(10);
		r = b;
		if(p < 2) { r = a;}
		if(p > 8) { r = c;}
		
		return r;
	}

	@Override
	public Token poll() {
		setTokensProcessed(getTokensProcessed() + 1);
		return super.poll();
	}
}

